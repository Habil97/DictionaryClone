@model EntityLayer.Concrete.Writer

@{
    ViewBag.Title = "WriterAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@*Yazar Ekleme Sayfası*@
<br />
<div class="col text-center">
    <h4>YAZAR EKLE</h4>
</div>
 <hr />
@using (Html.BeginForm("WriterAdd", "Writer", FormMethod.Post))
{
<div style="background-color:beige"   class="form-group">
    @Html.Label("AD-SOYAD")
    @Html.TextBoxFor(x => x.WriterUser, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.WriterUser)
    <br /> <hr />
    @Html.Label("MAİL")
    @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.WriterMail)
    <br /> <hr />
    @Html.Label("GÖRSEL")
    @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
    <br /> <hr />
    @Html.Label("UNVAN")
    @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.WriterTitle)
    <br /> <hr />
    @Html.Label("ADRES")
    @Html.TextBoxFor(x => x.WriterAdress, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.WriterAdress)
    <br /> <hr />
    @Html.Label("HAKKIMDA")
    @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.WriterAbout)
    <br /><hr />
    <div class="col text-center">
        <button class="btn btn-primary">EKLE</button>
    </div>
</div>
}

