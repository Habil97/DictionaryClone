@model EntityLayer.Concrete.Content

@{
    ViewBag.Title = "ContentAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@*Yorum Ekleme Sayfası*@
<br />
<div class="col text-center">
    <h4>YORUM YAZ</h4>
</div>
<br />
@using (Html.BeginForm("ContentAdd", "WriterPanelContent", FormMethod.Post))
{
<div class="form-group">
    <input type="hidden" name="HeadingID" value="@ViewBag.d" />
    <input type="hidden" name="WriterID" value="@ViewBag.e" />
    @Html.Label("Yorumunuz : ")
    @Html.TextAreaFor(x => x.ContentText, 30, 4, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ContentText)
    <br />
    <div class="col text-center">
        <button class="btn btn-primary">KAYDET</button>
    </div>
</div>
}

