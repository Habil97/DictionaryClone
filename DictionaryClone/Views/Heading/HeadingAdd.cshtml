@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "HeadingAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@*Başlık Ekleme Sayfası*@
<br />
<div class="col text-center">
    <h4>BAŞLIK EKLE</h4>
</div>
<br />
@using (Html.BeginForm("HeadingAdd", "Heading", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("BAŞLIK ADI")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HeadingName)
    <br />
    @Html.Label("KATEGORİ")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vc, new { @class = "form-control" })
    <br />
    @Html.Label("YAZAR")
    @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vw, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.WriterID)
    <br />
    <div class="col text-center">
        <button class="btn btn-primary">EKLE</button>
    </div>
</div>
}

