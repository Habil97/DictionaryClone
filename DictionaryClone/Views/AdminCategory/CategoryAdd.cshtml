@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "CategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@*Kategori Ekleme Sayfası*@
<br />
<div class="col text-center">
   <h4>KATEGORİ EKLE</h4>  
</div>
<br />
@using (Html.BeginForm("CategoryAdd", "AdminCategory", FormMethod.Post))
{
    <div style="background-color:beige" class="form-group">
        @Html.Label("KATEGORİ ADI")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /> 
        <div class="col text-center">
        <button class="btn btn-primary">EKLE</button>
        </div>
    </div>
}
