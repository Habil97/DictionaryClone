@using EntityLayer.Concrete
@model List<Category>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/DictionaryTheme/assets/css/bootstrap.min.css" rel="stylesheet" />

@*Kategorilerin Listelendiği Tablo*@
<table style="background-color:beige" class="table table-striped table-light">
    <tr>
        <th class="table-dark" style="font-family:Roboto;  font-size:  16px;">KATEGORİ ADI</th>
        <th class="table-dark" style="font-family: Roboto; font-size: 16px">SİL</th>
        <th class="table-dark" style="font-family: Roboto; font-size: 16px">GÜNCELLE</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td style="font-family:Arial">@item.CategoryName</td>
    <td style="font-family:Arial"><a href="/AdminCategory/CategoryDelete/@item.CategoryID" class="btn btn-danger">SİL</a></td>
    <td style="font-family:Arial"><a href="/AdminCategory/CategoryUpdate/@item.CategoryID" class="btn btn-success">GÜNCELLE</a></td>
</tr>
    }
</table>
<br />
<div class="col text-center">
    <a href="/AdminCategory/CategoryAdd" class="btn btn-dark btn-lg" 
       style="font-family:Arial; font-size:18px;">Yeni Kategori</a>
</div>

