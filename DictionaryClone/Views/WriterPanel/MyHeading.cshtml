@using EntityLayer.Concrete
@model List<Heading>

@{
    ViewBag.Title = "MyHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Light Bootstrap Dashboard - Free Bootstrap 4 Admin Dashboard by Creative Tim</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <link href="~/DictionaryTheme/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/DictionaryTheme/assets/css/light-bootstrap-dashboard.css?v=2.0.0 " rel="stylesheet" />
    <link href="~/DictionaryTheme/assets/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <div class="card-tools">

                </div>
            </div>
            <div class="card-body p-0">
                <table style="background-color:beige" class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width: 30%; font-family:Roboto; font-size:14px; font-weight:bold">
                                Başlık Adı
                            </th>
                            <th style="width: 20%; font-family:Roboto; font-size:14px; font-weight:bold">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 15%; font-family:Roboto; font-size:14px; font-weight:bold">
                                Durum
                            </th>
                            <th class="text-center" style="width: 15% ; font-family:Roboto; font-size:14px; font-weight:bold">
                                Kategori
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @item.HeadingDate.ToShortDateString()
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="img-circle img-fluid" src="@item.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    @Html.Raw(item.HeadingStatus == true ? "<span class='badge badge-danger'>Aktif</span>" : "<span class='badge badge-dark'>Pasif</span>")
                                </td>

                                <td class="project-state">
                                    <span class="badge badge-success">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <div class="btn-group-vertical">
                                        <a href="/Content/ContentByHeading/@item.HeadingID" class="btn btn-sm btn-primary">
                                            <i style="font-family: Arial; font-size: 14px; font-style: normal; font-weight: bold">Yorumlar</i>
                                        </a>
                                        <br />
                                        <a href="/WriterPanel/HeadingUpdate/@item.HeadingID" class="btn btn-sm btn-success">
                                            <i style="font-family: Arial; font-size: 14px; font-style: normal; font-weight:bold ">Başlığı Güncelle</i>
                                        </a>
                                        <br />
                                        <a href="/WriterPanel/HeadingStatusUpdate/@item.HeadingID" class="@(item.HeadingStatus == true ? "btn btn-sm btn-dark" : "btn btn-sm btn-danger")">
                                            <i style="font-family: Arial; font-size: 14px; font-style: normal; font-weight:bold ">@(item.HeadingStatus == true ? "Başlığı Pasif Yap" : "Başlığı Aktif Yap") </i>
                                        </a>
                                    </div>
                                </td>

                            </tr>

                        </tbody>
                    }
                </table>
            </div>
        </div>
        <div class="col text-center">
            <a href="/WriterPanel/NewHeading" class="btn btn-dark btn-lg"
               style="font-family:Arial; font-size:18px;">Yeni Başlık</a>
        </div>
    </section>
    <script src="~/DictionaryTheme/assets/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="~/DictionaryTheme/assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/DictionaryTheme/assets/js/core/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/DictionaryTheme/assets/js/plugins/bootstrap-switch.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
    <script src="~/DictionaryTheme/assets/js/plugins/chartist.min.js"></script>
    <script src="~/DictionaryTheme/assets/js/plugins/bootstrap-notify.js"></script>
    <script src="~/DictionaryTheme/assets/js/light-bootstrap-dashboard.js?v=2.0.0 " type="text/javascript"></script>
    <script src="~/DictionaryTheme/assets/js/demo.js"></script>
</body>


</html>


